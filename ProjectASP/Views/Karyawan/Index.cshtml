@using ProjectASP.ViewModels

@model KaryawanViewModel
<main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
                <div class="col-sm-6">
                    <h5 class="mb-0">Form Karyawan</h5>
                </div>
                @* <div class="col-sm-6">
                    <ol class="breadcrumb sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Simple Tables
                        </li>
                    </ol>
                </div> *@
            </div> <!--end::Row-->
        </div> <!--end::Container-->
    </div> <!--end::App Content Header--> <!--begin::App Content-->
    <div class="app-content">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="card mb-8">
                        <div class="card-header">
                            <div class="card-title">Form Karyawan</div>
                        </div> <!--end::Header--> <!--begin::Form-->
                        <form asp-action="Index" asp-controller="Karyawan" method="post">
                            <!--begin::Body-->
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" asp-for="EmployeeNumber" class="form-label">Employ Number</label> <input asp-for="EmployeeNumber" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                    @* <div id="emailHelp" class="form-text">
                                        We'll never share your email with anyone else.
                                    </div> *@
                                </div>
                                <div class="mb-3"> <label for="exampleInputPassword1" asp-for="FullName" class="form-label">Full Name</label> <input asp-for="FullName" type="text" class="form-control" id="exampleInputPassword1"> </div>
                                <div class="mb-3"> <label for="exampleInputPassword1" asp-for="Email" class="form-label">Email</label> <input asp-for="Email" type="email" class="form-control" id="exampleInputPassword1"> </div>
                                @* <div class="mb-3"> <label for="genderInput" class="form-label">Gender</label> <input type="text" class="form-control" id="genderInput"> </div> *@
                                <div class="mb-3">
                                    <select class="form-select" asp-for="Gender" aria-label="Default select example">
                                        <option disabled selected>--Select Gender --</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                                <div class="mb-3"> <label for="addressInput" asp-for="Address" class="form-label">Address</label> <input asp-for ="Address" type="text" class="form-control" id="addressInput"> </div>
                                <div class="mb-3"> <label for="handphoneInput" asp-for="Handphone" class="form-label">Handphone</label> <input asp-for="Handphone" type="text" class="form-control" id="handphoneInput"> </div>
                                <div class="mb-3">
                                    <textarea class="form-control" asp-for="Note" placeholder="Keterangan" id="floatingTextarea2" style="height: 100px"></textarea>
                                </div>
                            </div> <!--end::Body--> <!--begin::Footer-->
                            <div class="card-footer"> <button type="submit" class="btn btn-primary">Submit</button> </div> <!--end::Footer-->
                        </form> <!--end::Form-->
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <h5 class="mb-0">List Table Karyawan</h5>
                </div>
                @* <div class="col-sm-6">
                <ol class="breadcrumb sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                Simple Tables
                </li>
                </ol>
                </div> *@
            </div> <!--end::Row-->
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-8">
                        <div class="card-header">
                            <h3 class="card-title">List Table Karyawan</h3>
                        </div> <!-- /.card-header -->
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Employe Number</th>
                                        <th>Full Name</th>
                                        <th>Gender</th>
                                        <th>Address</th>
                                        <th>Handphone</th>
                                        <th style="width: 40px">Keterangan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="align-middle">
                                        <td>1.</td>
                                        <td>Update software</td>
                                        <td>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                            </div>
                                        </td>
                                        <td><span class="badge text-bg-danger">55%</span></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr class="align-middle">
                                        <td>2.</td>
                                        <td>Clean database</td>
                                        <td>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar text-bg-warning" style="width: 70%"></div>
                                            </div>
                                        </td>
                                        <td> <span class="badge text-bg-warning">70%</span> </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr class="align-middle">
                                        <td>3.</td>
                                        <td>Cron job running</td>
                                        <td>
                                            <div class="progress progress-xs progress-striped active">
                                                <div class="progress-bar text-bg-primary" style="width: 30%"></div>
                                            </div>
                                        </td>
                                        <td> <span class="badge text-bg-primary">30%</span> </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr class="align-middle">
                                        <td>4.</td>
                                        <td>Fix and squish bugs</td>
                                        <td>
                                            <div class="progress progress-xs progress-striped active">
                                                <div class="progress-bar text-bg-success" style="width: 90%"></div>
                                            </div>
                                        </td>
                                        <td> <span class="badge text-bg-success">90%</span> </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div> <!-- /.card-body -->
                        <div class="card-footer clearfix">
                            <ul class="pagination pagination-sm m-0 float-end">
                                <li class="page-item"> <a class="page-link" href="#">&laquo;</a> </li>
                                <li class="page-item"> <a class="page-link" href="#">1</a> </li>
                                <li class="page-item"> <a class="page-link" href="#">2</a> </li>
                                <li class="page-item"> <a class="page-link" href="#">3</a> </li>
                                <li class="page-item"> <a class="page-link" href="#">&raquo;</a> </li>
                            </ul>
                        </div>
                    </div> <!-- /.card -->
                </div> <!-- /.col -->
            </div> <!--end::Row-->
        </div>
    </div>
</main>